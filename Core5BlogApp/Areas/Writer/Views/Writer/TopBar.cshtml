@using Microsoft.AspNetCore.Http
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>

    <!-- SEARCH FORM -->
    <form class="form-inline ml-3">
        <div class="input-group input-group-sm">
            <input class="form-control form-control-navbar" type="search" placeholder="Ara" aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-navbar" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </form>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <!-- WriterLayoutNotificationList row -->
        @await Component.InvokeAsync("WriterLayoutNotificationList")
        <!-- /.WriterLayoutNotificationList row -->
        <li class="nav-item dropdown user-menu">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                <img src="~/userimage/@Context.Session.GetString("ImageUrl")" class="user-image img-circle elevation-2" alt="@Context.Session.GetString("Name") @Context.Session.GetString("Surname")">
                <span class="d-none d-md-inline">@Context.Session.GetString("Name") @Context.Session.GetString("Surname")</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <!-- User image -->
                <li class="user-header bg-dark">
                    <img src="~/userimage/@Context.Session.GetString("ImageUrl")" class="img-circle elevation-2" alt="@Context.Session.GetString("Name") @Context.Session.GetString("Surname")">

                    <p>
                        @Context.Session.GetString("Name") @Context.Session.GetString("Surname")
                        <small>@DateTime.Now.ToShortDateString()</small>
                    </p>
                </li>
                <!-- Menu Body -->
                <li class="user-body">
                    <div class="row">
                        <div class="col-6 text-center">
                            <a href="/Writer/Profile/Index/">Duyurular</a>
                        </div>
                        <div class="col-6 text-center">
                            <a href="/Writer/Message/ReceiverMessage/">Mesajlarım</a>
                        </div>
                    </div>
                    <!-- /.row -->
                </li>
                <!-- Menu Footer-->
                <li class="user-footer">
                    <a href="/Writer/Profile/Index/" class="btn btn-default btn-flat">Profilim</a>
                    <a href="/Writer/Login/LogOut/" class="btn btn-default btn-flat float-right">Çıkış Yap</a>
                </li>
            </ul>
        </li>
    </ul>
</nav>