@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Hizmetlerim Listesi Tablosu</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Küçült">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Kapat">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <table id="dttable" class="table table-striped projects">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Hizmetlerim İkon
                        </th>
                        <th>
                            Hizmetlerim Başlık
                        </th>
                        <th>
                            Hizmetlerim İçerik
                        </th>
                        <th class="text-right">
                            Hizmetlerim İşlemleri
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0; }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @(++i)
                            </td>
                            <td class="pl-5">
                                <button class="btn btn-dark"><i class="@item.ServiceIcon"></i></button>
                            </td>
                            <td>
                                @item.ServiceHeader
                            </td>
                            <td>
                                @item.ServiceContent.Substring(0, item.ServiceContent.Length > 30 ? 30 : item.ServiceContent.Length)
                            </td>
                            <td class="project-actions text-right">
                                <button type="button" class="btn btn-outline-success ServiceDetail" id="@item.ServiceID" data-id="@item.ServiceID" data-toggle="modal" data-target="#service-detail">
                                    <i class="fas fa-eye"></i>
                                    Görüntüle
                                </button>
                                <button type="button" class="btn btn-outline-info ServiceUpdate" id="@item.ServiceID" data-id="@item.ServiceID" data-toggle="modal" data-target="#service-update">
                                    <i class="fas fa-edit"></i>
                                    Güncelle
                                </button>
                                <button type="button" class="btn btn-outline-danger ServiceDelete" id="@item.ServiceID" data-id="@item.ServiceID" data-toggle="modal" data-target="#service-delete">
                                    <i class="fas fa-trash"></i>
                                    Sil
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Hizmetlerim İkon
                        </th>
                        <th>
                            Hizmetlerim Başlık
                        </th>
                        <th>
                            Hizmetlerim İçerik
                        </th>
                        <th class="text-right">
                            Hizmetlerim İşlemleri
                        </th>
                    </tr>
                </tfoot>
            </table>
            <button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#service-add">
                <i class="fas fa-plus"></i>
                Yeni Hizmetlerim Ekle
            </button>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

<!-- DETAİL MODAL -->
<div class="modal fade" id="service-detail" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success">
                <h4 class="modal-title"><i class="fas fa-edit"></i> Hizmetlerim Görüntüle</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="d-flex justify-content-center">
                    <div class="col-md-10">
                        <div class="card card-widget widget-user shadow-lg rounded">
                            <div class="widget-user-header bg-success">
                                <i id="DetailServiceIcon" class="bi bi-book-fill" style="font-size:3rem;"></i>
                                <h3 class="widget-user-username" style="font-weight:bold;" id="DetailServiceHeader"></h3>
                            </div>
                            <div class="card-footer" style="padding:30px;text-align:center;">
                                <div class="row" id="DetailServiceContent">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                </div>
            </div>
    </div>
</div>

