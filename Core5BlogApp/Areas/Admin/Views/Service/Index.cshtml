@section Scripts
{
    <script>

        $(function () {
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });

            //SERVİCE DELETE
            $(document).on("click", ".ServiceDelete", function () {
                var id = $(this).attr("data-id");
                $("#ServiceID").val(id);
            });

            $("#ServiceDelete").click(function () {
                var id = $("#ServiceID").val();
                $.ajax({
                    type: "POST",
                    url: "/Admin/Service/ServiceDelete/",
                    data: { "id": id },
                    dataType: "json",
                    success: function () {
                        $('#service-delete').modal('hide')
                        toastr.success('Silme İşlemi Başarılı.')
                        setInterval(function () {
                            location.reload();
                        }, 1500);
                    }
                });
            });

            //SERVİCE ADD
            $("#ServiceAdd").click(function () {
                $.validator.setDefaults({
                    submitHandler: function () {
                        var adddata = $("#ServiceAddForm").serialize();
                        $.ajax({
                            type: "POST",
                            url: "/Admin/Service/ServiceAdd/",
                            data: adddata,
                            dataType: "json",
                            success: function () {
                                $('#service-add').modal('hide')
                                toastr.success('Ekleme İşlemi Başarılı.')
                                setInterval(function () {
                                    location.reload();
                                }, 1500);
                            }
                        });
                    }
                });
                $('#ServiceAddForm').validate({
                    rules: {
                        ServiceHeader: {
                            required: true,
                            normalizer: function (value) {
                                return $.trim(value);
                            }
                        },
                        ServiceContent: {
                            required: true,
                            normalizer: function (value) {
                                return $.trim(value);
                            }
                        },
                    },
                    messages: {
                        ServiceHeader: {
                            required: "Lütfen boş bırakmayınız."
                        },
                        ServiceContent: {
                            required: "Lütfen boş bırakmayınız."
                        },
                    },
                    errorElement: 'span',
                    errorPlacement: function (error, element) {
                        error.addClass('invalid-feedback');
                        element.closest('.form-group').append(error);
                    },
                    highlight: function (element, errorClass, validClass) {
                        $(element).addClass('is-invalid');
                    },
                    unhighlight: function (element, errorClass, validClass) {
                        $(element).removeClass('is-invalid');
                    }
                });
            });

            //SERVİCE DETAİL
            $(document).on("click", ".ServiceDetail", function () {
                var id = $(this).attr("data-id");
                $.ajax({
                    type: "POST",
                    url: "/Admin/Service/ServiceGetItem/" + id,
                    dataType: "json",
                    success: function (service) {
                        var obj = jQuery.parseJSON(service);
                        $("#DetailServiceHeader").empty();
                        $("#DetailServiceContent").empty();
                        $("#DetailServiceIcon").removeClass().addClass(" ' " + obj.ServiceIcon + " ' ");
                        $("#DetailServiceHeader").append(obj.ServiceHeader);
                        $("#DetailServiceContent").append(obj.ServiceContent);
                    }
                });
            });

            //SERVİCE UPDATE
            $(document).on("click", ".ServiceUpdate", function () {
                var id = $(this).attr("data-id");
                $.ajax({
                    type: "POST",
                    url: "/Admin/Service/ServiceGetItem/" + id,
                    dataType: "json",
                    success: function (service) {
                        var obj = jQuery.parseJSON(service);
                        $("#UpdateServiceID").val(obj.ServiceID);
                        $("#UpdateServiceIcon").val(obj.ServiceIcon);
                        $("#UpdateServiceHeader").val(obj.ServiceHeader);
                        $("#UpdateServiceContent").val(obj.ServiceContent);
                    }
                });
            });
            $("#ServiceUpdate").click(function () {
                $.validator.setDefaults({
                    submitHandler: function () {
                        var updatedata = $("#ServiceUpdateForm").serialize();
                        $.ajax({
                            type: "POST",
                            url: "/Admin/Service/ServiceUpdate/",
                            data: updatedata,
                            dataType: "json",
                            success: function () {
                                $('#service-update').modal('hide')
                                toastr.success('Güncelleme İşlemi Başarılı.')
                                setInterval(function () {
                                    location.reload();
                                }, 1500);
                            }
                        });
                    }
                });
                $('#ServiceUpdateForm').validate({
                    rules: {
                        ServiceHeader: {
                            required: true,
                            normalizer: function (value) {
                                return $.trim(value);
                            }
                        },
                        ServiceContent: {
                            required: true,
                            normalizer: function (value) {
                                return $.trim(value);
                            }
                        },
                    },
                    messages: {
                        ServiceHeader: {
                            required: "Lütfen boş bırakmayınız."
                        },
                        ServiceContent: {
                            required: "Lütfen boş bırakmayınız."
                        },
                    },
                    errorElement: 'span',
                    errorPlacement: function (error, element) {
                        error.addClass('invalid-feedback');
                        element.closest('.form-group').append(error);
                    },
                    highlight: function (element, errorClass, validClass) {
                        $(element).addClass('is-invalid');
                    },
                    unhighlight: function (element, errorClass, validClass) {
                        $(element).removeClass('is-invalid');
                    }
                });
            });

        });
    </script>
