@using EntityLayer.Concrete
@model List<About>

@foreach (var item in Model)
{
    <div class="about-me container">

        <div class="section-title">
            <h2>Hakkımda</h2>
            <p>Hakkımda</p>
        </div>

        <div class="row">
            <div class="col-lg-4" data-aos="fade-right">
                <img src="~/images/@item.AboutImageUrl" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 pt-4 pt-lg-0 content" data-aos="fade-left">
                <h3>@item.AboutHeader</h3>
                <p class="fst-italic">
                    @item.AboutFirstContent
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span>@item.AboutDate</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@item.AboutWebAdress</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@item.AboutPhone</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@item.AboutCity</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@item.AboutAge</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span>@item.AboutDegree</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>PhEmailone:</strong> <span>@item.AboutMail</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@item.AboutFreelance</span></li>
                        </ul>
                    </div>
                </div>
                <p>
                    @item.AboutSecondContent
                </p>
            </div>
        </div>

    </div>
}
