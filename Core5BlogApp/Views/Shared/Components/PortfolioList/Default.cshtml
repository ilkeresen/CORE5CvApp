@using EntityLayer.Concrete
@model List<Portfolio>


    <div class="container">

        <div class="section-title">
            <h2>Referanslarım</h2>
            <p>REFERANSLARIM</p>
        </div>

        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">HEPSİ</li>
                    <li data-filter=".filter-web">WEB GELİŞTİRME</li>
                    <li data-filter=".filter-mobile">MOBİL GELİŞTİRME</li>
                    <li data-filter=".filter-data">VERİ ANALİZİ</li>
                    <li data-filter=".filter-test">TEST SÜRECİ</li>
                    <li data-filter=".filter-marketing">DİJİTAL PAZARLAMA</li>
                    <li data-filter=".filter-seo">SEO</li>
                </ul>
            </div>
        </div>

        <div class="row portfolio-container">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 portfolio-item filter-@item.PortfolioFilter">
                    <div class="portfolio-wrap">
                        <img src="~/images/portfolio/@item.PortfolioImageUrl" class="img-fluid" alt="@item.PortfolioHeader">
                        <div class="portfolio-info">
                            <h4>@item.PortfolioHeader</h4>
                            <p>@item.PortfolioContent</p>
                            <div class="portfolio-links">
                                <a href="~/images/portfolio/@item.PortfolioImageUrl" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.PortfolioHeader"><i class="bx bx-plus"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>